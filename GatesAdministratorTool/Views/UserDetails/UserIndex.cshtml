@model List<UserDetails>;
@{
    ViewData["Title"] = "User Details";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-10">
                    <h4 class="card-title">User Details</h4>
                 </div>
                <div class="col-2">
                    <a asp-action="CreateNewUser" asp-controller="UserDetails" class="btn btn-success">Add New User</a>
                </div>
                <div>&nbsp;</div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table id="order-listing" class="table">
                                <thead>
                                    <tr>
                                        <th>S.No #</th>
                                        <th>Emil Id</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Access</th>
                                        <th>Created By</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                @{i = i + 1;}
                                                <td>@i</td>
                                                <td>@item.EmailId</td>
                                                <td>@item.FirstName</td>
                                                <td>@item.LastName</td>
                                                <td>@item.Role</td>
                                                <td>@item.CreateBy</td>
                                                <td>
                                                    <label class="badge badge-info">@item.Status</label>
                                                </td>
                                                <td>
                                                    <a asp-action="EditUser" asp-route-id="@item.UserId" class="btn btn-outline-primary">Edit</a>
                                                </td>
                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
@section Scripts{
    <script>
        $(function () {
            $('#order-listing').DataTable({
                "aLengthMenu": [
                    [5, 10, 15, -1],
                    [5, 10, 15, "All"]
                ],
                "iDisplayLength": 10,
                "language": {
                    search: ""
                }
            });
        });
    </script>
}
